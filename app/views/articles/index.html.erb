<section>
  <h1 class="text-2xl sm:text-4xl font-bold">
    Articles
  </h1>

  <% @articles.each do |article| %>
    <article>
      <h1 class="text-lg sm:text-2xl font-bold">
        <%= link_to article.title, article %>
      </h1>

      <p>
        <%= article.body.slice!(0..10)... %>
      </p>
    </article>
  <% end %>

  <div class="mt-6">
    <%= link_to "New Article", new_article_path, class: "rounded-md bg-indigo-500 text-white py-2 px-4 cursor-pointer hover:bg-indigo-600" %>
  </div>
</section>
