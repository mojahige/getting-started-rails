<section>
  <h1 class="text-lg sm:text-2xl font-bold">
    New Article
  </h1>

  <%= form_with model: @article do |form| %>
    <div class="flex flex-col gap-4">
      <div>
        <div>
          <%= form.label :title, class: "font-bold" %>
        </div>

        <div>
          <%= form.text_field :title, class: "rounded-md" %>
        </div>

        <% if @article.errors.full_messages_for(:title).present? %>
          <div>
            <% @article.errors.full_messages_for(:title).each do |message| %>
              <p class="text-sm text-red-600">
                <%= message %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div>
        <div>
        <%= form.label :body, class: "font-bold" %>
        </div>

        <div>
          <%= form.text_area :body, class: "rounded-md" %>
        </div>

        <% if @article.errors.full_messages_for(:body).present? %>
          <div>
            <% @article.errors.full_messages_for(:body).each do |message| %>
              <p class="text-sm text-red-600">
                <%= message %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.submit class: "rounded-md bg-indigo-500 text-white py-2 px-4 cursor-pointer hover:bg-indigo-600" %>
    </div>
  <% end %>
</section>
